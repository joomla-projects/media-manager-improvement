<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="crop" label="PLG_MEDIA-ACTION_CROP_LABEL">
		<field
			name="crop_x"
			type="text"
		    hiddenLabel="true"
			addonBefore="PLG_MEDIA-ACTION_CROP_PARAM_X"
			addonAfter="px"
			pattern="\d*\.?\d*"
			label="PLG_MEDIA-ACTION_CROP_PARAM_X"
		/>
		<field
			name="crop_y"
			type="text"
		    hiddenLabel="true"
			addonBefore="PLG_MEDIA-ACTION_CROP_PARAM_Y"
			addonAfter="px"
			pattern="\d*\.?\d*"
			label="PLG_MEDIA-ACTION_CROP_PARAM_Y"
		/>
		<field
			name="crop_width"
			type="text"
		    hiddenLabel="true"
			addonBefore="PLG_MEDIA-ACTION_CROP_PARAM_WIDTH"
			addonAfter="px"
			pattern="\d*\.?\d*"
			label="PLG_MEDIA-ACTION_CROP_PARAM_WIDTH"
		/>
		<field
			name="crop_height"
			type="text"
		    hiddenLabel="true"
			addonBefore="PLG_MEDIA-ACTION_CROP_PARAM_HEIGHT"
			addonAfter="px"
			pattern="\d*\.?\d*"
			label="PLG_MEDIA-ACTION_CROP_PARAM_HEIGHT"
		/>

		<field name="aspectRatio"
		       type="radio"
		       hiddenLabel="true"
		       class="btn-group btn-group-ratio"
		       default=""
		>
			<option value="1.7777777777777777">16 / 9</option>
			<option value="1.3333333333333333">4 / 3</option>
			<option value="0.6666666666666666">2 / 3</option>

		</field>

	</fieldset>
</form>
