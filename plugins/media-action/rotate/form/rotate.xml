<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="Rotate" label="PLG_MEDIA-ACTION_ROTATE_LABEL">
		<field
			name="rotate_quality"
			type="number"
			label="PLG_MEDIA-ACTION_ROTATE_QUALITY"
			addonBefore="PLG_MEDIA-ACTION_ROTATE_QUALITY"
			min="1"
			max="100"
			step="1"
			default="80"
		/>

		<field
			type="spacer"
			hr="true"
		/>

		<field
			name="flip_image"
			type="checkboxes"
			hiddenLabel="true"
			class=""
			default=""
			>
			<option class="btn btn-outline-secondary" value="1">PLG_MEDIA-ACTION_ROTATE_PARAM_FLIP_HORIZONTAL</option>
			<option class="btn btn-outline-secondary" value="1">PLG_MEDIA-ACTION_ROTATE_PARAM_FLIP_VERTICAL</option>
		</field>

		<field
			name="rotate_a"
			type="number"
			label="PLG_MEDIA-ACTION_ROTATE_PARAM_ANGLE"
			min="0"
			max="360"
			step="1"
			value="0"
		/>
		
		<field
			name="rotate_distinct"
			type="radio"
			hiddenLabel="true"
			class="btn-group btn-group-rotate"
			default=""
			>
			<option value="0">0</option>
			<option value="90">90</option>
			<option value="180">180</option>
			<option value="270">270</option>
		</field>
		
	</fieldset>
</form>
