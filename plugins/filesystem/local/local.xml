		<fields name="params">
			<fieldset name="basic">
				<field
                        name="display_name"
						type="text"
						label="PLG_FILESYSTEM_LOCAL_DISPLAY_NAME_LABEL"
						description="PLG_FILESYSTEM_LOCAL_DISPLAY_NAME_DESC"
                        default="Local"
				/>
			</fieldset>
		</fields>
