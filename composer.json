{
    "name": "joomla/joomla-cms",
    "type": "project",
    "description": "Joomla CMS",
    "keywords": ["joomla", "cms"],
    "homepage": "https://github.com/joomla/joomla-cms",
    "license": "GPL-2.0-or-later",
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.0.8"
        },
        "preferred-install": {
            "joomla/application": "dist",
            "joomla/authentication": "dist",
            "joomla/console": "dist",
            "joomla/controller": "dist",
            "joomla/crypt": "dist",
            "joomla/data": "dist",
            "joomla/database": "dist",
            "joomla/di": "dist",
            "joomla/event": "dist",
            "joomla/http": "dist",
            "joomla/image": "dist",
            "joomla/ldap": "dist",
            "joomla/oauth1": "dist",
            "joomla/oauth2": "dist",
            "joomla/mediawiki": "dist",
            "joomla/registry": "dist",
            "joomla/session": "dist",
            "joomla/string": "dist",
            "joomla/uri": "dist",
            "joomla/utilities": "dist"
        },
        "vendor-dir": "libraries/vendor"
    },
    "support": {
        "issues": "https://issues.joomla.org",
        "irc": "https://irc.lc/freenode/joomla/",
        "forum": "https://forum.joomla.org/",
        "docs": "https://docs.joomla.org"
    },
    "autoload": {
        "psr-4": {
            "Joomla\\CMS\\": "libraries/src/"
        }
    },
    "require": {
        "php": ">=7.0",
        "joomla/application": "~2.0@dev",
        "joomla/archive": "~1.1.5",
        "joomla/authentication": "~2.0@dev",
        "joomla/console": "~2.0@dev",
        "joomla/controller": "~2.0@dev",
        "joomla/crypt": "~2.0@dev",
        "joomla/data": "~2.0@dev",
        "joomla/database": "~2.0@dev",
        "joomla/di": "~2.0@dev",
        "joomla/event": "~2.0@dev",
        "joomla/filter": "^1.3.2",
        "joomla/http": "~2.0@dev",
        "joomla/image": "~2.0@dev",
        "joomla/ldap": "~2.0@dev",
        "joomla/oauth1": "~2.0@dev",
        "joomla/oauth2": "~2.0@dev",
        "joomla/registry": "~2.0@dev",
        "joomla/session": "~2.0@dev",
        "joomla/string": "~2.0@dev",
        "joomla/uri": "~2.0@dev",
        "joomla/utilities": "~2.0@dev",
        "defuse/php-encryption": "~2.1",
        "doctrine/inflector": "1.2.0",
        "fig/link-util": "~1.0",
        "google/recaptcha": "~1.1",
        "mso/idna-convert": "~1.1",
        "paragonie/sodium_compat": "~1.4",
        "phpmailer/phpmailer": "~6.0",
        "psr/link": "~1.0",
        "symfony/console": "3.4.*",
        "symfony/debug": "3.4.*",
        "symfony/web-link": "3.4.*",
        "symfony/yaml": "3.4.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "phpunit/dbunit": "~3.0",
        "phpunit/phpunit-dom-assertions": "~2.0",
        "joomla/mediawiki": "dev-master",
        "friendsofphp/php-cs-fixer": "~1.11",
        "squizlabs/php_codesniffer": "~1.5",
        "joomla-projects/joomla-browser": "~4.0@dev",
        "joomla-projects/robo-joomla": "dev-develop",
        "joomla/test-system": "dev-4.0-dev",
        "joomla/test-unit": "dev-4.0-dev"
    }
}
